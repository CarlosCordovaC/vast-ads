<?xml version="1.0" encoding="UTF-8"?>
<vmap:VMAP xmlns:vmap="http://www.iab.net/videosuite/vmap" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.iab.net/videosuite/vmap">
    
    <!-- Pre-Roll Ad -->
    <vmap:AdBreak timeOffset="start" breakType="linear">
        <vmap:AdSource id="preroll" allowMultipleAds="false" followRedirects="true">
            <vmap:AdTagURI templateType="vast3">
                <![CDATA[https://carloscordovac.github.io/vast-ads/add_spiderman.xml]]>
            </vmap:AdTagURI>
        </vmap:AdSource>
    </vmap:AdBreak>

    <!-- Mid-Roll Ad at 50% of the content -->
    <vmap:AdBreak timeOffset="00:00:30.000" breakType="linear">
        <vmap:AdSource id="midroll" allowMultipleAds="false" followRedirects="true">
            <vmap:AdTagURI templateType="vast3">
                <![CDATA[https://carloscordovac.github.io/vast-ads/add_spiderman.xml]]>
            </vmap:AdTagURI>
        </vmap:AdSource>
    </vmap:AdBreak>
    
    <!-- Post-Roll Ad -->
    <vmap:AdBreak timeOffset="end" breakType="linear">
        <vmap:AdSource id="postroll" allowMultipleAds="false" followRedirects="true">
            <vmap:AdTagURI templateType="vast3">
                <![CDATA[https://carloscordovac.github.io/vast-ads/add_spiderman.xml]]>
            </vmap:AdTagURI>
        </vmap:AdSource>
    </vmap:AdBreak>
    
</vmap:VMAP>
